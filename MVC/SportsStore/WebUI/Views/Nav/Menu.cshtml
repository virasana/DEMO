@model WebUI.Models.MenuViewModel


@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg" })

@foreach (var link in Model.Categories)
{
    @Html.RouteLink(link, new
    {
        controller = "Product",
        action = "List",
        category = link,
        page = 1
    },
    new { @class = "btn btn-block btn-default btn-lg" + (link == Model.SelectedCategory ? "btn-primary" : string.Empty) });
}